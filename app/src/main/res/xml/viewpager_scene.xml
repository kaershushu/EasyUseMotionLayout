<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/page1"
        app:constraintSetEnd="@id/page2"
        app:duration="700">

    </Transition>

    <Transition
        app:constraintSetStart="@id/page2"
        app:constraintSetEnd="@id/page3"
        app:duration="700">



    </Transition>

    <Transition
        app:constraintSetStart="@id/page3"
        app:constraintSetEnd="@id/page2"
        app:duration="700">

    </Transition>

    <Transition
        app:constraintSetStart="@id/page2"
        app:constraintSetEnd="@id/page1"
        app:duration="700" >

    </Transition>

    <!-- 第一页状态 -->
    <ConstraintSet android:id="@+id/page1">
        <Constraint
            android:id="@id/v1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/v2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationX="250dp"
            android:rotationY="-15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/v3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationX="500dp"
            android:rotationY="-15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </ConstraintSet>

    <!-- 第二页 -->
    <ConstraintSet android:id="@+id/page2">
        <Constraint
            android:id="@id/v1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationX="-250dp"
            android:rotationY="15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@id/v2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/v3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationX="250dp"
            android:rotationY="-15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <!-- 第三页 -->
    <ConstraintSet android:id="@+id/page3">
        <Constraint
            android:id="@id/v1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationX="-500dp"
            android:rotationY="15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/v2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:translationX="-250dp"
            android:rotationY="15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/v3"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:rotationY="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>